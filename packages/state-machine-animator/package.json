{
  "name": "@gimle/state-machine-animator",
  "version": "0.1.0",
  "description": "Animated state machine and interaction stack visualizations for agent frameworks",
  "type": "module",
  "main": "./dist/state-machine-animator.cjs",
  "module": "./dist/state-machine-animator.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/state-machine-animator.js",
      "require": "./dist/state-machine-animator.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "node build.mjs",
    "build:watch": "node build.mjs --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "esbuild": "0.24.0",
    "typescript": "5.6.3"
  },
  "keywords": [
    "state-machine",
    "animation",
    "visualization",
    "agent",
    "svg"
  ],
  "author": "Erik's Funhouse",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gimlelabs/state-machine-animator.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
